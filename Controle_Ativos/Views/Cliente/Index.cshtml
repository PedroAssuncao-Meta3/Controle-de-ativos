@model IEnumerable<Controle_Ativos.BLL.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

@section Scripts{
    <script src="~/js/Datagrid/datatables.bundle.js"></script>

    <script type="text/javascript">
        $("document").ready(function () {
            $("#tblIndex").DataTable({
                responsive: true,
                searching: true,
                ordering: false,
                "lengthMenu": [[5, 10, -1], [5, 10, "All"]],
                "language": {
                    url: "../../lib/datatables/locale/pt-br.js"
                }
            });
        });
    </script>
}
<head>
    <title>
        Lista Clientes
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!-- CSS Files -->
    <link href="../assets/css/material-dashboard.css?v=2.1.0" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Lista Clientes</h3>
                        <p>
                            <a asp-action="Create">Create New</a>
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tblIndex" class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nome)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
